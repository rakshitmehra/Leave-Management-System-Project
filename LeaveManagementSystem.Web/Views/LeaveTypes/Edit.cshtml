@model LeaveTypeEditVM

@{
    ViewData["Title"] = "Edit Leave Type";
}

<div class="container mt-5">

    <div class="mb-4">
        <h2 class="fw-bold text-warning">
            <i class="bi bi-pencil-square me-2"></i>
            Edit Leave Type
        </h2>
        <p class="text-muted mb-0">
            Update leave type details
        </p>
    </div>

    <div class="card shadow-sm border-0 col-lg-6">
        <div class="card-body">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name"
                           class="form-control form-control-lg"
                           placeholder="Leave type name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="NumberOfDays" class="form-label fw-semibold"></label>
                    <input asp-for="NumberOfDays"
                           class="form-control"
                           type="number"
                           min="0" />
                    <span asp-validation-for="NumberOfDays" class="text-danger small"></span>
                </div>

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>

                    <button type="submit" class="btn btn-warning px-4">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
