@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 text-center">Create Leave Request</h1>

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-body">

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LeaveTypeId" class="form-label fw-bold"></label>
                        <select asp-for="LeaveTypeId" class="form-select" asp-items="Model.LeaveTypes"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RequestComments" class="form-label fw-bold"></label>
                        <textarea asp-for="RequestComments" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="RequestComments" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-controller="LeaveAllocation" asp-action="Details" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-success px-4">Create</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
