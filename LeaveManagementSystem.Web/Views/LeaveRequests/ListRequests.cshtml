@using LeaveManagementSystem.Web.Services.LeaveRequests
@model EmployeeLeaveRequestListVM
@{
    ViewData["Title"] = "View Leave Requests";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h1 class="fw-bold">Leave Requests Overview</h1>
</div>

<div class="row g-3 mb-5">
    <div class="col-sm-6 col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-primary mb-0">@Model.TotalRequests</h2>
                <p class="card-text text-muted mb-0">@Html.DisplayNameFor(m => m.TotalRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-success mb-0">@Model.ApprovedRequests</h2>
                <p class="card-text text-muted mb-0">@Html.DisplayNameFor(m => m.ApprovedRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-warning mb-0">@Model.PendingRequests</h2>
                <p class="card-text text-muted mb-0">@Html.DisplayNameFor(m => m.PendingRequests)</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-danger mb-0">@Model.DeclinedRequests</h2>
                <p class="card-text text-muted mb-0">@Html.DisplayNameFor(m => m.DeclinedRequests)</p>
            </div>
        </div>
    </div>
</div>

@if (!Model.LeaveRequests.Any())
{
    <div class="alert alert-info">
        <h4 class="mb-0">No leave requests available.</h4>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.LeaveRequests[0].LeaveType)</th>
                        <th>@Html.DisplayNameFor(m => m.LeaveRequests[0].StartDate)</th>
                        <th>@Html.DisplayNameFor(m => m.LeaveRequests[0].EndDate)</th>
                        <th>@Html.DisplayNameFor(m => m.LeaveRequests[0].NumberOfDays)</th>
                        <th>@Html.DisplayNameFor(m => m.LeaveRequests[0].LeaveRequestStatus)</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LeaveRequests)
                    {
                        var badgeColor = item.LeaveRequestStatus switch
                        {
                            LeaveRequestStatusEnum.Pending => "warning",
                            LeaveRequestStatusEnum.Approved => "success",
                            LeaveRequestStatusEnum.Declined => "danger",
                            LeaveRequestStatusEnum.Canceled => "secondary",
                            _ => "dark"
                        };

                        <tr>
                            <td>@item.LeaveType</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>@item.NumberOfDays</td>
                            <td>
                                <span class="badge bg-@badgeColor px-3 py-2">
                                    @item.LeaveRequestStatus
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.LeaveRequestStatus == LeaveRequestStatusEnum.Pending)
                                {
                                    <a asp-action="Review" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary btn-sm">Review</a>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}