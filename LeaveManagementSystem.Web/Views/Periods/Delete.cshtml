@model LeaveManagementSystem.Data.Period

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">

    <div class="mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Delete Period
        </h2>
        <p class="text-muted mb-0">
            This action cannot be undone
        </p>
    </div>

    <div class="card shadow-sm border-0 col-lg-6">
        <div class="card-body">

            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-trash fs-4 me-3"></i>
                <strong>Are you sure you want to delete this period?</strong>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-muted">Name</dt>
                <dd class="col-sm-8 fw-semibold">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4 text-muted">Start Date</dt>
                <dd class="col-sm-8">
                    @Model.StartDate.ToString("dd MMM yyyy")
                </dd>

                <dt class="col-sm-4 text-muted">End Date</dt>
                <dd class="col-sm-8">
                    @Model.EndDate.ToString("dd MMM yyyy")
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>

                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </form>

        </div>
    </div>
</div>
