@model LeaveManagementSystem.Data.Period

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-calendar-event me-2"></i>
                Period Details
            </h2>
            <p class="text-muted mb-0">
                View period information
            </p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Edit"
               asp-route-id="@Model?.Id"
               class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 col-lg-6">
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Name</dt>
                <dd class="col-sm-8 fw-semibold">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4 text-muted">Start Date</dt>
                <dd class="col-sm-8">
                    @Model.StartDate.ToString("dd MMM yyyy")
                </dd>

                <dt class="col-sm-4 text-muted">End Date</dt>
                <dd class="col-sm-8">
                    @Model.EndDate.ToString("dd MMM yyyy")
                </dd>
            </dl>

        </div>
    </div>
</div>
