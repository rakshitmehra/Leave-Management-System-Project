@model EmployeeAllocationVM
@{
    ViewData["Title"] = "View Allocations";
    var isAdmin = User.IsInRole(Roles.Administrator);
    var isEmployee = User.IsInRole(Roles.Employee);

    string message = isAdmin ? "There are no allocations" : "You have no allocations. Please contact your Administrator.";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-calendar-check me-2"></i>
            Leave Allocations
        </h2>

        <div class="d-flex gap-2">
            @if (isAdmin)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            }
            @if (isEmployee)
            {
                <a asp-controller="LeaveRequests"
                   asp-action="Index"
                   class="btn btn-outline-primary">
                    <i class="bi bi-clock-history"></i> Request History
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">
                @Model.FirstName @Model.LastName
            </h5>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-md-3 text-muted">First Name</dt>
                <dd class="col-md-9">@Model.FirstName</dd>

                <dt class="col-md-3 text-muted">Last Name</dt>
                <dd class="col-md-9">@Model.LastName</dd>

                <dt class="col-md-3 text-muted">Email</dt>
                <dd class="col-md-9">
                    <a href="mailto:@Model.Email" class="text-decoration-none">
                        @Model.Email
                    </a>
                </dd>

                <dt class="col-md-3 text-muted">Date of Birth</dt>
                <dd class="col-md-9">@Model.DateOfBirth.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    @if (isAdmin && !Model.IsCompletedAllocation)
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center shadow-sm">
            <div>
                <i class="bi bi-exclamation-triangle me-2"></i>
                User is missing some leave allocations.
            </div>

            <form asp-action="AllocateLeave" class="mb-0">
                <input type="hidden" asp-for="@Model.Id" />
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i>
                    Allocate Missing Leave
                </button>
            </form>
        </div>
    }

    @if (Model.LeaveAllocations.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    Leave Allocations — @Model.LeaveAllocations[0].Period.Name
                </h5>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Leave Type</th>
                            <th>Original</th>
                            <th>Remaining</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var allocation in Model.LeaveAllocations)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @allocation.LeaveType.Name
                                </td>

                                <td>
                                    <span class="badge bg-primary rounded-pill">
                                        @allocation.Days
                                    </span>
                                </td>

                                <td>
                                    <span class="badge bg-warning text-dark rounded-pill">
                                        @allocation.Days
                                    </span>
                                </td>

                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        @if (isAdmin)
                                        {
                                            <a asp-action="EditAllocation"
                                               asp-route-id="@allocation.Id"
                                               class="btn btn-outline-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        }

                                        <a asp-controller="LeaveRequests"
                                           asp-action="Create"
                                           asp-route-leaveTypeId="@allocation.LeaveType.Id"
                                           class="btn btn-outline-success">
                                            <i class="bi bi-send"></i> Request
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm text-center">
            <i class="bi bi-info-circle fs-4"></i>
            <h5 class="mt-2 mb-0">@message</h5>
        </div>
    }
</div>